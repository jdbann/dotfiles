" PLUGINS

" Setup plugins
source ~/.vim.plugins

" SETTINGS

" Default to creating new splits below or right of current pane
set splitbelow
set splitright

" DISPLAY

" Use 24-bit colors
set termguicolors

" Enable syntax highlighting
syntax on

" Set color scheme
let g:onedark_terminal_italics=1
colorscheme onedark

" KEYBINDINGS

" Navigate splits without leader
nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>
